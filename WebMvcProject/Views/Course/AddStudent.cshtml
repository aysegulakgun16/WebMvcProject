

<h2>Kursa Öğrenci Ekle</h2>


<h3>@ViewBag.CourseName</h3>
<p>Toplam Süre: @ViewBag.TotalHours</p>
<p>Kurs Eğitmeni: @ViewBag.CourseTeacher</p>
<p>Kurs Öğrenciler:</p>
<ul>
    

    @foreach (var student in ViewBag.CourseStudents)
    {
        <li>@student.Name @student.Surname</li>
    }

</ul>

<form method="post" asp-controller="Course" asp-action="AddStudent" class="mt-3">
    <input type="hidden" name="courseId" value="@ViewBag.CourseId" />

    <div class="form-group">
        <label for="studentIds">Kurs Öğrencileri Dışında Öğrencileri Seç:</label>
        <select name="studentIds" multiple class="form-control">
            @foreach (var student in ViewBag.Students)
            {
               
                if (!ViewBag.SelectedStudentIds.Contains(student.Id))
                {
                    <option value="@student.Id">@student.Name @student.Surname</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Öğrenci Ekle</button>
    </div>
</form>
